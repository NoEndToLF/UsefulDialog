<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="loadingdialog"
    android:textAllCaps="false"

    android:id="@+id/btn_loading"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="只有title"
        android:textAllCaps="false"

        android:id="@+id/btn_title"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title和message"
        android:textAllCaps="false"

        android:id="@+id/btn_title_message"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入框dialog"
        android:textAllCaps="false"

        android:id="@+id/btn_edittext"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"

        android:text="ListView的Dialog+++"
        android:id="@+id/btn_list_one"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"

        android:text="ListView的Dialog==="
        android:id="@+id/btn_list_two"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"

        android:text="时间选择器"
        android:id="@+id/btn_date"/>
</LinearLayout>
