<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/usefuldialog_loading_bg"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:paddingRight="15dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Title"
        android:textColor="@color/UsefulDialog_black"
        android:id="@+id/tv_diloag_title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/UsefulDialog_black"
        android:theme="@style/MyEditText"
        android:id="@+id/ed_diloag_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:ellipsize="end"
            android:id="@+id/btn_dialog_cancle"
            android:background="@drawable/usefuldialog_loading_bg"
            android:textColor="@color/UsefulDialog_blue"
            android:text="取消"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:id="@+id/btn_dialog_sure"
            android:background="@drawable/usefuldialog_loading_bg"
            android:textColor="@color/UsefulDialog_blue"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>
